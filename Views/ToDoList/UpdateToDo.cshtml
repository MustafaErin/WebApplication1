@model ToDoList

@{
    ViewData["Title"] = "UpdateToDo";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <input type="hidden" asp-for="@Model.ToDoListId" />
                            <label>Yapılacak İçerik</label>
                            <br />
                            <input type="text" asp-for="@Model.Title" class="form-control" />
                            <br />
                            <label>Yapılacaklar Tarih</label>
                            <br />
                            <input type="date" asp-for="@Model.Date" class="form-control" />
                            <br />
                            <label>Yapılacaklar Status</label>
                            <br />
                            <input type="text" asp-for="@Model.Status" class="form-control" />
                            <br />
                            <label>image Url</label>
                            <br />
                            <input type="text" asp-for="@Model.ImageUrl" class="form-control" />
                            <br />
                            <button class="btn btn-success">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
