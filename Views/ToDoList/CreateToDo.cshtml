@model ToDoList
@{
    ViewData["Title"] = "CreateToDo";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacaklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacaklar Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Yapılacaklar Biligisi</label>
                            <br />
                            <input type="text" asp-for="@Model.Title" class="form-control" />
                            <br />
                            <label>Yapılacaklar Tarih</label>
                            <br />
                            <input type="date" asp-for="@Model.Date" class="form-control" />
                            <br />
                            <label>İmage Url</label>
                            <br />
                            <input type="text" asp-for="@Model.ImageUrl" class="form-control" />
                            <br />
                            <button class="btn btn-success">EKLE</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
