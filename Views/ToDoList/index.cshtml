@model List<ToDoList>
@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacaklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacaklar Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yapılacaklar İle İlgili İşlemleri Aşağıda Uygulayabilirsiniz:
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">içerik</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">ImageUrl</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ToDoListId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Date</td>
                                        <td>@item.ImageUrl</td>
                                        @if (item.Status == true)
                                        {
                                            <td><a href="/ToDoList/ChangeStatus/@item.ToDoListId" class="btn btn-primary">Yapılmadı Olarak İşaretle</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/ToDoList/ChangeStatus/@item.ToDoListId" class="btn btn-dark">Yapıldı olarak İşaretle</a></td>
                                        }
                                        <td><a href="/ToDoList/DeleteToDo/@item.ToDoListId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/ToDoList/UpdateToDo/@item.ToDoListId" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/ToDoList/CreateToDo/" class="btn btn-success">Yeni Yapılacak işlem ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
