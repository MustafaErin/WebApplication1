@model Experiance
@{
    ViewData["Title"] = "CreateExperiance";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Firma Biligisi</label>
                            <br />
                            <input type="text" asp-for="@Model.Head" class="form-control"/>
                            <br />
                            <label>Çalışma Pozisyonu</label>
                            <br />
                            <input type="text" asp-for="@Model.Title" class="form-control" />
                            <br />
                            <label>Tarih Aralığı</label>
                            <br />
                            <input type="text" asp-for="@Model.Date" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <br />
                            <textarea rows="5" class="form-control" asp-for="@Model.Description"></textarea>
                            <br />
                            <button class="btn btn-success">EKLE</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
