@model List<Experiance>
@{
    ViewData["Title"] = "ExperianceList";
    Layout = "~/Views/Layout/Index.cshtml";
}


	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Deneyimler</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Deneyim Listesi</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Deneyimler İle İlgili İşlemleri Aşağıda Uygulayabilirsiniz:
							</div>
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Başlık</th>
										<th scope="col">Ünvan</th>
										<th scope="col">Tarih</th>
										<th scope="col">Açıklama</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
											<td>@item.ExperianceId</td>
											<td>@item.Head</td>
											<td>@item.Title</td>
											<td>@item.Description</td>
											<td>@item.Date</td>
											<td><a href="/Experiance/DeleteExperiance/@item.ExperianceId" class="btn btn-danger">Sil</a></td>
											<td><a href="/Experiance/UpdateExperiance/@item.ExperianceId" class="btn btn-warning">Güncelle</a></td>
										</tr>
									}
								</tbody>
							</table>
							<a href="/Experiance/CreateExperiance/" class="btn btn-success">Yeni Deneyim ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
